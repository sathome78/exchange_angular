{
  "extends": ["tslint-config-airbnb", "../tslint.json"],
  "rules": {
    "align": [true, "statements"],
    "prefer-template": [true, "allow-single-concat"],
    "ter-arrow-parens": [true, "as-needed"],
    "max-line-length": [true, {"limit": 120, "ignore-pattern": "^import |^export {(.*?)}"}],
    "no-trailing-whitespace": [true, "ignore-comments"],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ],
    "directive-selector": [
        true,
        "attribute",
        "app",
        "camelCase"
    ],
    "component-selector": [
        true,
        "element",
        "app",
        "kebab-case"
    ]
  }
}
